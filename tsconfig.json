{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["challenges/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "storage"]
}